{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

# Install common macOS packages

source /tmp/chezmoi-utils.sh

printf "${green}[02 - Brew Packages] ${reset}"
{{- if or (lt 02 (atoi (env "SCRIPTS_START_AT"))) (env "SKIP_BREW") }}
echo "Skip installing common macOS packages"
exit 0
{{ else }}
echo "Install common macOS packages"
{{- end }}

set -eufo pipefail

{{ $taps := list
  "github/gh"
  "homebrew/cask"
  "homebrew/cask-fonts"
  "homebrew/core"
-}}

{{ $brews := list
  "asdf"
  "aws-iam-authenticator"
  "awscli"
  "bash"
  "bat"
  "brew-cask-completion"
  "chezmoi"
  "coreutils"
  "curl"
  "duti"
  "exa"
  "ffmpeg"
  "fzf"
  "fzy"
  "gh"
  "git-delta"
  "git"
  "gnu-units"
  "gnupg"
  "grep"
  "helm"
  "hub"
  "jq"
  "kubernetes-cli"
  "mas"
  "nano"
  "npm"
  "openssl"
  "php"
  "postgresql"
  "readline"
  "ripgrep"
  "speedtest-cli"
  "stern"
  "tree"
  "vivid"
  "watch"
  "wget"
  "wifi-password"
  "yarn"
  "zoxide"
  "z"
  "zsh"
  "zsh-autosuggestions"
  "zsh-syntax-highlighting"
-}}

{{ $casks := list
  "1password-cli"
  "1password"
  "adobe-acrobat-reader"
